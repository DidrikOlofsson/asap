rule GenerateIndex:
    input:
        GENOME
    output:
        path.join(STAR_DIR, "index", "Genome")
    params:
        partition = "main",
        nodes = "1",
        ntasks = "8",
        time = "02:00:00",
        mem = "32G",
        mail_user = EMAIL,
        mail_type = EMAIL_TYPE
    log:
        path.join(STAR_DIR, "logs", "index", "star_index.log")
    conda:
        "envs/star.yml"
    script:
        "scripts/star_index.py"

rule StarAlign:
    input:
        star_idx = STAR_IDX,
        reads = GetReads
    output:
        path.join(STAR_DIR, "alignments", "{sample}", "Aligned.sortedByCoord.out.bam")
    params:
        partition = "main",
        nodes = "1",
        ntasks = "8",
        time = "3:00:00",
        mem = "32G",
        mail_user = EMAIL,
        mail_type = EMAIL_TYPE
    log:
        path.join(STAR_DIR, "logs", "alignment", "{sample}_alignment.log")
    conda:
        "envs/star.yml"
    script:
        "scripts/star_align.py"
